@model IEnumerable<SP_Dashboard.Models.STUDENT>
<div class="row">
    <div class="box-body table-responsive no-padding">
        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <th>
                        Student ID
                    </th>
                    <th>
                        Full name
                    </th>
                    <th style="width: 100px; text-align: center">Functions</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.STUDENT_ID_NUMBER)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.STUDENT_FIRST_NAME) @Html.DisplayFor(model => item.STUDENT_MIDDLE_NAME) @Html.DisplayFor(model => item.STUDENT_LAST_NAME)
                        </td>
                        <td align="center">
                            @*@Html.ActionLink("Sửa", "Edit", new {id = item.USER_ID}) |
                                @Html.ActionLink("Xóa", "Delete", new {id = item.USER_ID})*@
                            <a class="deleteStudent" title="Delete" href="javascript:void(0)"
                               data-id="@item.STUDENT_ID_NUMBER">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="studentModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header alert alert-danger">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Information Dialog</h4>
            </div>
            <div class="modal-body">
                <p class="success-message">Are you sure to delete this record ? </p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success delete-confirmStudent">Ok</button>
                <button class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!-- End of the boostrap modal popup -->