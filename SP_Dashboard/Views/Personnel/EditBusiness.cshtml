@model SP_Dashboard.Models.COMPANY

@{
    ViewBag.Title = "Edit Business";
}
<section class="content-header">
    <h1>
        Edit Business
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Edit Business</li>
    </ol>
</section>
<section class="content container-fluid">
    <div class="box box-primary center-block">
        <div class="box-header with-border">
            <h3 class="title">Edit Business Information</h3>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="box-body form-box center-block">
                @Html.HiddenFor(model => model.COMPANY_ID, new { htmlAttributes = new { @class = "form-control" } })

                <div class="form-group">
                    @Html.LabelFor(model => model.UEN)
                    @Html.EditorFor(model => model.UEN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UEN, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Company name</label>
                    @Html.EditorFor(model => model.COMPANY_NAME, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.COMPANY_NAME, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Company description</label>
                    @Html.TextAreaFor(model => model.COMPANY_DESCRIPTION, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.COMPANY_DESCRIPTION, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Country</label>
                    @Html.DropDownList("COUNTRY_ID", null, new { @class = "form-control form-width" })
                    @Html.ValidationMessageFor(model => model.COUNTRY_ID, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary pull-right">
                    Save
                </button>
                <a href="@Url.Action("Index", "Personnel")" class="btn btn-default">Back To Personnel List</a>
            </div>
        }
    </div>
</section>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
