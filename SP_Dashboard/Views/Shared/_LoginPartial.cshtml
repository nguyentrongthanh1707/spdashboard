                @UserManager.GetFullName
                <small>@UserManager.GetUserEmail</small>
            </p>
        </li>
        <!-- Menu Footer-->
        <li class="user-footer">
            @*<div class="pull-left">
                <a href="#" class="btn btn-default btn-flat">Profile</a>
            </div>*@
