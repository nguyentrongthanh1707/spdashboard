                            @Html.ValidationMessageFor(model => model.NO_OF_STUDENTS, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.COST_TO_SP)
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.COST_TO_SP, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.COST_TO_SP, "", new { @class = "text-danger" })
                        </div>
                    </div>*@

                <div class="form-footer">
                    <button type="submit" class="btn btn-primary">
                        <span>
                            Save <i aria-hidden="true" class="fa fa-save"></i>
                        </span>
                    </button>
                </div>
            </div>
        }
    </div>
</section>
   
